{
  "name": "kevinstamp-static",
  "version": "1.0.0",
  "description": "Static HTML/CSS/JS build of the KEVIN stamp saga website",
  "type": "module",
  "scripts": {
    "build:static": "node scripts/build.js",
    "build:css": "tailwindcss -i ./src/css/styles.css -o ./dist/css/styles.min.css --minify",
    "build:js": "node scripts/bundle-js.js",
    "dev": "python3 -m http.server 8080 --directory dist",
    "preview": "npm run build:static && npm run dev"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.17",
    "@tailwindcss/typography": "^0.5.15",
    "autoprefixer": "^10.4.20",
    "esbuild": "^0.25.0"
  },
  "dependencies": {}
}